<script type="text/javascript" src="https://cdn.jsdelivr.net/clappr/latest/clappr.min.js"></script>
<script src="/cached/includes/subtitles-octopus.js"></script>
<script type="text/javascript" id="www-widgetapi-script" src="https://s.ytimg.com/yts/jsbin/www-widgetapi-vflXFLqZz/www-widgetapi.js" async=""></script>
<script type="text/javascript" src="https://ewwink.github.io/clappr-youtube-plugin/clappr-youtube-plugin.js"></script>

<div id="container1">
	<div id="container2">
		<div id="dragbar_v" style="opacity: 0"></div>
		<div id="maincontent">
			<div id="dragbar_h" style="opacity: 0"></div>
			<div id="container_chat">
				<div id="chat_div" style="position: relative; width: 100%; height: 100%;">
					<div id="header">
						<button id="btn_userlist_toggle" class="square">👨‍👦</button>
						<button id="btn_chat_settings" class="square">⚙</button>
						<span id="user_count">disconnected</span>
					</div>

					<div class="chat_main_area">
						<div id="messages"></div>
						<div id="input_area">
							<input id="chat_input" type="text"/>
							<button id="btn_show_emotes" class="square">🙂</button>
						</div>
						<div id="userlist"></div>
					</div>
				</div>
			</div>
			<div id="container_video">
				<div id="player"></div>
			</div>
		</div>
		<div id="bottom">
			<div style="width: 100%; overflow: hidden;">
				<input type="range" min="1" max="1000" value="0" id="seekbar" class="hidden"/>
			</div>
			<div class="col">
				<button id="btn_user_settings">settings</button>
				<button id="btn_create_poll" class="hidden">create poll</button>
				<div id="polls_list"></div>
			</div>
			<div class="col" style="text-align: right">
				<%= render @view_module, "playlist.html", assigns %>
			</div>
		</div>
	</div>
</div>

<div class="poll_item" id="poll_item_template">
	<div class="poll_item-inner">
		<span class="poll-item-remove">&times;</span>
		<span class="poll_item_title"></span>
		<div></div>
	</div>
</div>

<div class="poll_choice" id="poll_item_choice_template">
	<button class="poll_button"></button>
	<span></span>
</div>

<script>
	var scrollbar = container2.offsetWidth - container2.clientWidth;
	container2.style.paddingRight = scrollbar + "px";
	container2.style.width = "calc(100% + " + scrollbar + "px)";
	maincontent.style.width = "calc(100% + " + scrollbar + "px)";
	bottom.style.width = "calc(100% + " + scrollbar + "px)";
	dragbar_v.style.width = "calc(100% + " + scrollbar + "px)";
</script>
