<link href="https://fonts.googleapis.com/css?family=Varela+Round&display=swap" rel="stylesheet"> 

<div style="padding: auto; text-align: center; font-size: 1.5em;">
	<div style="padding: 10px 10px 2px 10px; font-family: 'Varela Round', sans-serif;">Rooms:</div>
	<%= for {num_users, room_name} <- @rooms do %>
		<a style="text-decoration: none; display: block; margin: 8px auto; text-align: left; padding: 4px 12px; width: 270px; border: 1px solid rgba(255, 255, 255, 0.4); border-radius: 10000px;" href="/r/<%= room_name %>">
			<div>
				<span style="font-family: 'Varela Round', sans-serif;"><%= room_name %></span> <span style="float: right; font-family: 'Varela Round', sans-serif;"><%= num_users %> 🙍</span>
			</div>
		</a>
	<% end %>
</div>